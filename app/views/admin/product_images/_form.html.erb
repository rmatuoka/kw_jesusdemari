<%= form_for ([:admin,@category,@subcategory,@product,@product_image], :html => { :multipart => :true }) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :image %>
    <%= f.file_field :image%>
  </p>
  <%if @product_image.image.file?%>
  <p>
    <%= image_tag(@product_image.image.url(:thumb))%>
  </p>
  <% end %>
  <p>
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </p>
  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <p><%= f.submit %></p>
<% end %>
