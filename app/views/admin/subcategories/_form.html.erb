<%= form_for ([:admin,@category,@subcategory], :html => { :multipart => :true }) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :category_id, "Categoria" %><br />
    <%= f.text_field :category_id %>
  </p>
  <p>
    <%= f.label :title, "Título" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description, "Descrição" %><br />
    <%= f.text_area :description, :class => "mceEditor" %>
  </p>
  <p><%= f.submit "Salvar", :class => "button" %></p>
<% end %>
