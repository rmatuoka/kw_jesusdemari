<% title "Admin/Banner" %>

<p>
  <strong>Título:</strong>
  <%= @banner.title %>
</p>
<p>
  <strong>Imagem:</strong>
  <%= image_tag(@banner.image.url(:thumb)) %>
</p>
<p>
  <strong>Link:</strong>
  <%= @banner.link %>
</p>
<p>
  <strong>Seção:</strong>
  <%= @banner.section.title %>
</p>
<p>
  <strong>Publicado:</strong>
  <%= print_active(@banner.published) %>
</p>
<p>
  <strong>Ativo:</strong>
  <%= print_active(@banner.active) %>
</p>

<p>
  <%= link_to "Editar", edit_admin_section_banner_path(@section,@banner), :class => "secondary small button" %> |
  <%= link_to "Deletar", admin_section_banner_path(@section,@banner), :class => "secondary small button", :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "Ver Todos", admin_section_banners_path(@section), :class => "secondary small button" %>
</p>
