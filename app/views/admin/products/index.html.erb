<% title "Produtos" %>
<h1>Produtos</h1>
<table class="twelve columns">
  <tr>
    <th>Resumo</th>
    <th>Link</th>
    <th>Publicado</th>
    <th>Ativo</th>
  </tr>
  <% for product in @products %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.link %></td>
      <td><%= product.published %></td>
      <td><%= product.active %></td>
      <td><%= link_to "Visualizar", admin_category_subcategory_product_path(@category,@subcategory,product), :class => "secondary small button" %></td>
      <td><%= link_to "Editar", edit_admin_category_subcategory_product_path(@category,@subcategory,product), :class => "secondary small button" %></td>
      <td><%= link_to "Deletar", admin_category_subcategory_product_path(@category,@subcategory,product), :class => "secondary small button", :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "+ Produto", new_admin_category_subcategory_product_path(@category,@subcategory,product), :class => "button" %></p>
<p><%= link_to "Voltar", admin_category_subcategories_path(@category,@subcategory), :class => "button" %></p>
