<%= form_for ([:admin,@category,@subcategory,@product], :html => { :multipart => :true }) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :summary, "Título" %><br />
    <%= f.text_field :summary, :placeholder => "Resumo", :class => "twelve columns"  %>
  </p>
  <p>
    <%= f.label :body, "Descrição" %><br />
    <%= f.text_area :body, :placeholder => "Descrição", :class => "twelve columns"  %>
  </p>
  <p>
    <%= f.label :logo, "Imagem" %>
    <%= f.file_field :logo %>
  </p>
  <%if @product.logo.file?%>

  <p> 

  <%= image_tag(@product.logo.url(:thumb)) %>

  </p>
  <% end %>
  <p>
    <%= f.label :link %><br />
    <%= f.text_field :link, :placeholder => "Link", :class => "twelve columns"  %>
  </p>
  <p>
    <%= f.label :Publicado %><br />
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.label :Ativo %><br />
    <%= f.check_box :active %>
  </p>
  <p><%= f.submit "Salvar", :class => "button" %></p>
<% end %>
